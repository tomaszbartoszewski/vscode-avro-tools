{
    "name": "avro-tools",
    "displayName": "Avro Tools",
    "description": "Avro tooling supporting schema definition in avsc files",
    "version": "0.0.1",
    "author": "Tomasz Bartoszewski",
    "license": "MIT",
    "publisher": "tomaszbartoszewski",
    "icon": "images/AvroTools.png",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/tomaszbartoszewski/vscode-avro-tools"
    },
        "bugs": {
        "url": "https://github.com/tomaszbartoszewski/vscode-avro-tools/issues"
    },
    "activationEvents": [
        "onLanguage:avroavsc"
    ],
    "main": "./client/out/extension",
    "contributes": {
        "languages": [
            {
                "id": "avroavsc",
                "aliases": [
                    "Avro avsc",
                    "avroavsc"
                ],
                "extensions": [
                    ".avsc"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "avroavsc",
                "scopeName": "source.avsc",
                "path": "./syntaxes/avroavsc.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "avroavsc",
                "path": "./snippets/avsc.json"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
        "test": "sh ./scripts/e2e.sh",
        "unittest": "mocha -r ts-node/register server/test/**/*.test.ts"
    },
    "devDependencies": {
        "@types/vscode": "^1.48.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "eslint": "^7.6.0",
        "ts-node": "^8.10.2",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "glob": "^7.1.6",
        "mocha": "^8.0.1",
        "typescript": "^3.8.3",
        "vscode-test": "^1.4.0"
    }
}
